<mvc:View controllerName="Efatura.Application.IrsaliyeList.Controller.IrsaliyeList"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" height="100%">
  <Page class="sapUiContentPadding">
  <Panel expandable="true">
    <headerToolbar>
		<OverflowToolbar>
      		<Title text="İrsaliye Listesi" />	
		  	<ToolbarSpacer />		
			<SearchField id="SearchField_id" liveChange="onFilter" placeholder="Arama">
			<layoutData><OverflowToolbarLayoutData minWidth="200px" maxWidth="300px" shrinkable="true"/></layoutData>
			</SearchField>
			<Button icon="sap-icon://refresh"  tooltip="Yenile" type="Transparent" press="getIrsaliyeList"/>
			<Button
				tooltip="Sırala"
				app:param="SortDialog"
				icon="sap-icon://sort"
				press="handleButtonPressed" />
			<Button
				tooltip="Filitrele"
				app:param="FilterDialog"
				icon="sap-icon://filter"
				press="handleButtonPressed" />
			<Button
				app:param="GroupDialog"
				tooltip="Grupla"
				icon="sap-icon://group-2"
				press="handleButtonPressed" />
			<OverflowToolbarButton type="Transparent" text="Excel" icon="sap-icon://download" press="onExcellExpot" tooltip="İndir" />
		</OverflowToolbar>
		</headerToolbar>
	</Panel>
  <Table 
  		id="irsaliyeListTable_id"
    	class="tableClass"
		growing="true"
		growingScrollToLoad="true"
    	growingThreshold="50"
		items="{/IrsaliyeListModel}">
		<columns>
			<Column
				minScreenWidth="Tablet"
        		demandPopin = "true">
				<Text text="Kimlik No" />
			</Column>
      		<Column
        		demandPopin = "true"
				minScreenWidth="Tablet">
				<Text text="Hesap Tipi" />
			</Column>
			<Column
        		demandPopin = "true" 
				minScreenWidth="Tablet">
				<Text text="Posta Kutusu" />
			</Column>
			<Column
       			demandPopin = "true"
       			minScreenWidth="Tablet">
				<Text text="İsim" />
			</Column>
			<Column
        		demandPopin = "true"
				minScreenWidth="Tablet">
				<Text text="Tip" />
			</Column>
			<Column
        		demandPopin = "true"
				minScreenWidth="Tablet">
				<Text text="" />
			</Column>
		</columns>
		<items>
			<ColumnListItem id="irsaliyeListTableCol_id"> 
				<cells>
			<Text
            class="tableText"
			text="{KIMLIK_NO}" />
          	<Text
            class="tableText"
			text="{HESAP_TIPI}" />
			<Text
            class="tableText"
			text="{POSTA_KUTUSU}"/>
          	<Text
            class="tableText"
			text="{ISIM}" />
			<Text
           	class="tableText"
			text="{TIP}" />
			<HBox>
			<Button text="Onayla" class="sapUiTinyMarginEnd" type="Accept" icon="sap-icon://accept" />
			<Button text="Görüntü"  icon="sap-icon://display" />
			</HBox>
			</cells>
			</ColumnListItem>
		</items>
	</Table>
  </Page>
</mvc:View>
